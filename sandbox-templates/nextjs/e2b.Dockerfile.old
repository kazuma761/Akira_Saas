# You can use most Debian-based base images
FROM node:21-slim

# Install curl
RUN apt-get update && apt-get install -y curl && apt-get clean && rm -rf /var/lib/apt/lists/*

COPY compile_page.sh /compile_page.sh
RUN chmod +x /compile_page.sh

# Install dependencies and customize sandbox
WORKDIR /home/user/nextjs-app

# Updated to match your Next.js version from package.json
RUN npx --yes create-next-app@16.0.5 . --yes

# Shadcn (keep same versions unless you want them updated too)
RUN npx --yes shadcn@2.6.3 init --yes -b neutral --force
RUN npx --yes shadcn@2.6.3 add --all --yes

# Move the Nextjs app to the home directory and remove the nextjs-app directory
RUN mv /home/user/nextjs-app/* /home/user/ && rm -rf /home/user/nextjs-app

# Expose Next.js on port 3000 and start it on sandbox boot
ENV HOST=0.0.0.0
ENV PORT=3000
EXPOSE 3000

# Ensure we run from the app directory
WORKDIR /home/user

# Start a dev server bound to 0.0.0.0 so E2B can proxy the port
CMD ["npm", "run", "dev", "--", "-H", "0.0.0.0", "-p", "3000"]
